{
  // ----- Basic Metadata -----
  appId: "com.screenshare-assist.app",
  productName: "Screenshare Assist",
  copyright: "Â© 2025 Screenshare Assist Project",
  artifactName: "screenshare-assist-${version}.${ext}",

  // Syncs version automatically from package.json
  // (electron-builder does this automatically if not overridden)
  directories: {
    output: "dist",
    buildResources: "assets"
  },

  // ----- What to Include -----
  files: [
    "dist/**/*",
    "dist-electron/**/*",
    "package.json"
  ],

  extraResources: [
    {
      from: "bin/",
      to: "bin/",
      filter: ["**/*"]
    }
  ],

  // ----- Linux Builds -----
  linux: {
    target: ["AppImage"],
    category: "Video",
    icon: "assets/icons/png/",
    executableName: "screenshare-assist",
    desktop: {
      Name: "Screenshare Assist",
      Comment: "Simple screensharing app with video editing and AI short suggestions"
    }
  },

  // ----- Windows Builds -----
  win: {
    target: ["nsis", "portable"],
    icon: "assets/icons/icon.ico"
  },

  nsis: {
    oneClick: false,
    allowToChangeInstallationDirectory: true,
    perMachine: false,
    createDesktopShortcut: true,
    shortcutName: "Screenshare Assist",
    artifactName: "ScreenshareAssist-${version}-win-${arch}.${ext}"
  },

  // ----- Asar & Resource Handling -----
  asar: true,
  asarUnpack: ["bin/**"],

  // Preserve ffmpeg permissions for Linux
  afterPack: "scripts/afterPack.cjs",

  // Disable auto publishing (manual releases)
  publish: null
}
